{
  "name": "@njakob/rainbow",
  "version": "1.2.1",
  "description": "String styling helpers inspired by Chalk",
  "author": "Nicolas Jakob <nicow.jakob@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/njakob/rainbow",
  "repository": "njakob/rainbow",
  "bugs": {
    "url": "https://github.com/njakob/rainbow/issues"
  },
  "keywords": [
    "style",
    "styles",
    "color",
    "colors",
    "colour",
    "terminal",
    "console",
    "cli",
    "string",
    "str",
    "text",
    "ansi",
    "tty",
    "formatter",
    "formatting",
    "rgb",
    "log",
    "logger",
    "logging",
    "command-line"
  ],
  "main": "lib/rainbow.js",
  "module": "lib/rainbow.es.js",
  "jsnext:main": "lib/rainbow.es.js",
  "scripts": {
    "clean": "rimraf lib",
    "build:commithash": "git rev-parse HEAD > .commithash",
    "build:sources": "rollup -c rollup.config.js",
    "build:flow": "cpr flow/rainbow.js.flow lib/rainbow.js.flow && cpr flow/rainbow.js.flow lib/rainbow.es.js.flow",
    "build": "npm run clean && npm run build:commithash && npm run build:sources && npm run build:flow",
    "lint:fix": "eslint --fix .",
    "lint": "eslint .",
    "flow": "flow check",
    "release": "standard-version",
    "test": "npm run lint && npm run flow",
    "prepublish": "npm run test && npm run build"
  },
  "devDependencies": {
    "@njakob/hulk": "^2.0.0",
    "@njakob/parcel": "^1.1.1",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.2.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.5.0",
    "cpr": "^2.0.2",
    "eslint": "^3.19.0",
    "eslint-config-njakob": "^4.3.0",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-import": "^2.2.0",
    "flow-bin": "^0.44.2",
    "rimraf": "^2.5.4",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-json": "^2.1.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "standard-version": "^4.0.0"
  },
  "dependencies": {
    "ansi-styles": "^3.0.0"
  }
}
