{
  "name": "@njakob/rainbow",
  "version": "1.0.3",
  "description": "String styling helpers",
  "author": "Nicolas Jakob <nicow.jakob@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/njakob/rainbow",
  "repository": {
    "type": "git",
    "url": "git://github.com/njakob/rainbow.git"
  },
  "bugs": {
    "url": "https://github.com/njakob/rainbow/issues"
  },
  "keywords": [
    "style",
    "styles",
    "color",
    "colors",
    "colour",
    "terminal",
    "console",
    "cli",
    "string",
    "str",
    "text",
    "ansi",
    "tty",
    "formatter",
    "formatting",
    "rgb",
    "log",
    "logger",
    "logging",
    "command-line"
  ],
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && npm run build:sources && npm run build:flow",
    "build:sources": "babel -d lib src --ignore 'src/types.js'",
    "build:flow": "cpr flow/index.js.flow lib/index.js.flow",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "flow": "flow check",
    "test": "npm run lint && npm run flow",
    "bump:major": "npm version major -m \"Bump to %s\"",
    "bump:minor": "npm version minor -m \"Bump to %s\"",
    "bump:patch": "npm version patch -m \"Bump to %s\"",
    "prepublish": "npm run test && npm run build"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.2.1",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.5.0",
    "cpr": "^2.0.2",
    "eslint": "^3.19.0",
    "eslint-config-njakob": "^4.3.0",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-import": "^2.2.0",
    "flow-bin": "^0.43.0",
    "rimraf": "^2.5.4"
  },
  "dependencies": {
    "ansi-styles": "^3.0.0"
  }
}
